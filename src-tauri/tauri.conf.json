{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "plode",
  "version": "0.1.0",
  "identifier": "com.plode.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3123",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "plode",
        "width": 800,
        "height": 600,
        "resizable": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
