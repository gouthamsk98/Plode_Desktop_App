{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "plode",
  "version": "0.1.0",
  "identifier": "com.plode.app",
  "app": {
    "windows": [
      {
        "title": "plode",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "dragDropEnabled": false,
        "url": "http://localhost:3123"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "assets/**/**/*",
      "assets/**/**/**/*",
      "assets/**/**/**/**/*",
      "assets/**/**/**/**/**/*",
      "assets/**/**/**/**/**/**/*",
      "assets/**/**/**/**/**/**/**/*",
      "assets/**/**/**/**/**/**/**/**/*"
    ]
  }
}
